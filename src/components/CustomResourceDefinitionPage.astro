---
import { PropertyTree } from "./PropertyTree";
import { PropertyType } from "./PropertyType";
import { IconBulb, IconCube } from "@tabler/icons-react";
import type { Project } from "@lib/crds";
import type { Resource } from "@lib/kube";
import CustomChangeList from "./CustomChangeList.astro";

type Props = {
  project: Project;
  resource: Resource;
  tag: string;
};

const { project, resource, tag } = Astro.props;
const apiVersion = `${resource.gvk.group}/${resource.gvk.version}`;
---

<nav class="order-first flex space-x-2 pb-10 text-sm font-semibold">
  <a
    class="text-muted-foreground hover:underline"
    href={!tag || tag === project.versions[0]
      ? `/${project.slug}`
      : `/${project.slug}/${tag}`}
  >
    ‚Üê back to all kinds
  </a>
</nav>

<div class="flex flex-col pb-4">
  <div
    class="flex flex-col md:flex-row gap-2 md:items-center text-base font-semibold text-primary"
  >
    <h2>{apiVersion}</h2>
    <span class="hidden md:block">&middot;</span>
    <div
      class="inline-flex w-fit items-center gap-1 leading-none border px-2 py-1 text-muted-foreground text-sm rounded-lg"
    >
      {
        resource.scope === "Namespaced" ? (
          <IconCube className="size-4 inline" />
        ) : (
          <img src="/kubernetes.svg" class="size-4 inline" />
        )
      }
      {
        resource.scope === "Namespaced"
          ? "Namespaced Resource"
          : "Cluster-scoped Resource"
      }
    </div>
  </div>
  <h1 class="mt-2 text-3xl font-bold leading-8 tracking-tight sm:text-4xl">
    {resource.gvk.kind}
  </h1>
  <pre
    class="mt-2 max-w-4xl whitespace-pre-line text-lg text-muted-foreground">
    {resource.definition.description}
      </pre>
</div>

<PropertyTree
  scope={resource.scope}
  definition={resource.definition}
  level={0}
  client:load
/>

<div
  class="inline-flex items-center gap-2 p-2 border rounded text-muted-foreground font-medium text-sm mt-4"
>
  <IconBulb className="size-4" />
  <div>
    <p>
      Click on <span class="font-bold text-foreground tracking-tighter"
        >Property Name</span
      > to show the description, and <PropertyType
        type="Pink Types"
        hasChildren
        className="font-semibold tracking-tighter"
      /> to expand schema.
    </p>
    <p>
      Required properties are marked with <span class="text-destructive">*</span
      >
    </p>
  </div>
</div>

<div class="mt-20">
  <div class="divide-y">
    <div>
      <h2 class="text-2xl font-bold leading-10 tracking-tight">
        Change History
      </h2>
      <div>
        {
          project.versions.map((v) => (
            <CustomChangeList
              project={project}
              version={v}
              gvk={resource.gvk}
            />
          ))
        }
      </div>
    </div>
  </div>
</div>

