---
import HomePage from "@components/HomePage.astro";
import SiteLayout from "@layouts/SiteLayout.astro";
import { LATEST_VERSION, VERSIONS } from "@lib/swagger";

export function getStaticPaths() {
  return VERSIONS.filter((x) => x !== LATEST_VERSION).map((version) => ({
    params: { version },
  }));
}

const { version } = Astro.params;
---

<SiteLayout
  title={`Kubernetes Spec v${version}`}
  description="Find the documentation for all builtin resources, properties, types and even some examples!"
  noIndex
>
  <HomePage version={version} />
</SiteLayout>
